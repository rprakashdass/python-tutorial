print("6. Ask the user for two numbers and print the sum of the numbers back to them.")


def print_sum():
    num1 = float(input("Enter the first number: "))
    num2 = float(input("Enter the second number: "))
    result = num1 + num2
    print("The sum of the numbers is", result)


print_sum()

